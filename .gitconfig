[user]
	email = sergey_v_kaplun@mail.ru
	name = Sergey Kaplun
[core]
	editor = vim
	pager = less -x4
[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
	dcur = diff HEAD
	dtool = difftool
	dlast = diff HEAD^ HEAD
	last = log -1 HEAD
	dump = cat-file -p
	type = cat-file -t
	hist = log --pretty=format:\"h %ad | %s%d [%an]\" --graph --date=short
	lg   = "log --pretty=format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "status"]
	added = green
	changed = red bold
	untracked = blue bold
[color "branch"]
	remote = yellow

